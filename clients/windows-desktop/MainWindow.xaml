<Window x:Class="NovelEverywhere.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novel Everywhere Windows" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        MinWidth="900" MinHeight="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" Background="#F6F6F6" Margin="0,0,8,0">
            <StackPanel Margin="16">
                <TextBlock Text="账号登录" FontSize="20" Margin="0,0,0,12"/>
                <TextBox PlaceholderText="邮箱" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_OnPasswordChanged"/>
                <Button Content="登录" Margin="0,8,0,0" Command="{Binding LoginCommand}" />
                <TextBlock Text="{Binding Status}" TextWrapping="Wrap" Margin="0,12,0,12"/>
                <Separator/>
                <TextBlock Text="书架" FontSize="18" Margin="0,12,0,6"/>
                <ListBox ItemsSource="{Binding Novels}"
                         SelectedItem="{Binding SelectedNovel}"
                         DisplayMemberPath="Title"
                         Height="400"/>
                <Button Content="刷新书架" Margin="0,12,0,0" Command="{Binding RefreshCommand}"/>
            </StackPanel>
        </DockPanel>
        <Grid Grid.Column="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding SelectedNovel.Title}" FontSize="26" Margin="0,8,0,16"/>
            <ScrollViewer Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="{Binding ReaderContent}" TextWrapping="Wrap" FontSize="18"/>
            </ScrollViewer>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <Button Content="朗读" Command="{Binding SpeakCommand}"/>
                <Button Content="同步进度" Command="{Binding SyncCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
